<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org/DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.bunsanedthinking_springback.repository.SurgeryHistoryMapper">
    <select id="getAllByCustomerId_Customer" resultType="com.example.bunsanedthinking_springback.vo.SurgeryHistoryVO">
        select * from surgeryhistory
        where customer_id = #{id}
    </select>
    <select id="get_UnderWritingModel" parameterType="int" resultType="com.example.bunsanedthinking_springback.vo.SurgeryHistoryVO">
        SELECT id, hospital_name, name, customer_id, date
        FROM surgeryhistory
        WHERE customer_id = #{id}
    </select>
    <insert id="insert_SalesModel" parameterType="com.example.bunsanedthinking_springback.vo.SurgeryHistoryVO">
        INSERT INTO surgeryhistory (id, hospital_name, name, date, customer_id)
        VALUES (#{id}, #{hospital_name}, #{name}, #{date}, #{customer_id})
    </insert>

    <insert id="insert_surgeryHistory_customerInformationManagement" parameterType="com.example.bunsanedthinking_springback.vo.SurgeryHistoryVO">
        INSERT INTO surgeryhistory (customer_id, hospital_name, name, date)
        VALUES (#{customer_id},
                #{hospital_name},
                #{name},
                #{date});
    </insert>
    <select id="findSurgeryHistoriesByCustomerId_customerInformationManagement" parameterType="int" resultType="com.example.bunsanedthinking_springback.vo.SurgeryHistoryVO">
        SELECT * FROM surgeryhistory
        WHERE customer_id = #{customer_id};
    </select>
    <delete id="deleteSurgeryHistoriesByCustomerId_customerInformationManagement" parameterType="int">
        DELETE FROM surgeryhistory
        WHERE customer_id = #{customer_id};
    </delete>
    <update id="update_surgeryHistory_customerInformationManagement" parameterType="com.example.bunsanedthinking_springback.vo.SurgeryHistoryVO">
        UPDATE surgeryhistory
        SET hospital_name = #{hospital_name},
            name = #{name},
            date = #{date}
        WHERE id = #{id};
    </update>

    <select id="getMaxId_SalesModel" resultType="Integer">
        select max(id)
        from surgeryhistory
    </select>
</mapper>